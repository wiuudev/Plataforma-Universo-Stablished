        <div class="ms-md-1 ms-0">
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Apex Charts</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Apex Mixed Charts</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header Close -->

    <!-- Start::row-1 -->
    <div class="row">
        <div class="col-xl-6">
            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Line & Column Chart</div>
                </div>
                <div class="card-body">
                    <div id="mixed-linecolumn">
                        <ApexChart TItem="Mixedbasic"  XAxisType="XAxisType.Datetime" Title="Traffic Sources" Height="320" Options="MixedbasicOptions" Debug>
                            <ApexPointSeries TItem="Mixedbasic" Items="Mixedbasics" Name="Website Blo" SeriesType="SeriesType.Bar" XValue="@(e => e.TrafficDate)" YAggregate="@(e => e.Sum(e => e.WebsiteValue))"/>
                            <ApexPointSeries TItem="Mixedbasic" Items="Mixedbasics" Name="Social Media" SeriesType="SeriesType.Line" XValue="@(e => e.TrafficDate)" YAggregate="@(e => e.Sum(e => e.MediaValue))" ShowDataLabels/>
                        </ApexChart>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Multiple Y-Axis Chart</div>
                </div>
                <div class="card-body">
                    <div id="mixed-multiple-y">
                        <ApexChart TItem="MixedMultiple" Title="XYZ - Stock Analysis (2009 - 2016)" Height="320" Options="MixedMultipleOptions">
                            <ApexPointSeries TItem="MixedMultiple" Items="MixedMultiples" Name="Income" SeriesType="SeriesType.Bar" XValue="@(e => e.StocksYear)" YAggregate="@(e => e.Sum(e => e.IncomeValue))"/>
                            <ApexPointSeries TItem="MixedMultiple" Items="MixedMultiples" Name="Cashflow" SeriesType="SeriesType.Bar" XValue="@(e => e.StocksYear)" YAggregate="@(e => e.Sum(e => e.CashflowValue))"/>
                            <ApexPointSeries TItem="MixedMultiple" Items="MixedMultiples" Name="Revenue" SeriesType="SeriesType.Line" XValue="@(e => e.StocksYear)" YAggregate="@(e => e.Sum(e => e.RevenueValue))"/>
                        </ApexChart>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title">Line & Area Chart</div>
                </div>
                <div class="card-body">
                    <div id="mixed-linearea">
