                            <ApexPointSeries TItem="MixedLinearea" Items="MixedLineareas" Name="TEAM A" SeriesType="SeriesType.Area" XValue="@(e => e.TeamValue)" YAggregate="@(e => e.Sum(e => e.TeamAValue))"/>
